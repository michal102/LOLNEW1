<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.admin.lolnew1.LolActivity"
    tools:background="@android:color/holo_blue_bright"
    android:background="@android:color/holo_blue_bright"
    tools:actionBarNavMode="none">

    <Button
        android:text="event store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="224dp"
        android:layout_y="506dp"
        android:id="@+id/event_s" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="67dp"
        android:id="@+id/store"
        android:text="sklepik"
        android:layout_x="122dp"
        android:layout_y="430dp" />

    <!--<Button
        android:text="coin +"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:layout_x="122dp"
        android:layout_y="355dp" />-->

    <Button
        android:text="reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/store"
        android:layout_x="15dp"
        android:layout_y="506dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/heart_i"
        android:layout_x="206dp"
        android:layout_y="6dp" />

    <TextView
        android:text="hearts:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/score"
        android:id="@+id/heart_ti"
        android:layout_x="159dp"
        android:layout_y="6dp" />

    <TextView
        android:text="score:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:layout_marginStart="38dp"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_x="162dp"
        android:layout_y="26dp" />

    <ImageView
        android:layout_width="76dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/heart_i"
        android:id="@+id/heartimage"
        android:layout_toStartOf="@+id/button"
        android:layout_x="31dp"
        android:layout_y="344dp" />

    <Button
        android:text="heart+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="26dp"
        android:id="@+id/heart_plus"
        android:layout_x="122dp"
        android:layout_y="366dp" />

    <TextView
        android:layout_width="143dp"
        android:layout_height="59dp"
        android:id="@+id/cliker"
        android:text="0"
        android:layout_alignBaseline="@+id/score"
        android:layout_alignBottom="@+id/score"
        android:layout_centerHorizontal="true"
        android:layout_x="206dp"
        android:layout_y="27dp" />

    <EditText
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/score"
        android:layout_alignStart="@+id/button"
        android:text="klikaj na ekran"
        android:layout_x="15dp"
        android:layout_y="17dp" />

    <ImageView
        android:layout_width="232dp"
        android:layout_height="205dp"
        app:srcCompat="@drawable/coin"
        android:layout_x="73dp"
        android:layout_y="88dp"
        android:id="@+id/imageView" />

</AbsoluteLayout>
